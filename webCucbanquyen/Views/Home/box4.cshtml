@model IEnumerable<CucbanquyenModel.Models.Post>
@{
    int temp = 0;
}
@if (Model != null && Model.Count() > 0)
{
    <div class="box-6">
        <div class="box-content">
            <div class="box-header">
                <span class="title"><a href="@ViewBag.Url">@ViewBag.Name</a></span>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="item-first">
                            <span class="thumbnail">
                                <a href="@Model.FirstOrDefault().postUrl">
                                    <img src="@Model.FirstOrDefault().thumbnail" alt="@Model.FirstOrDefault().postName" />
                                </a>
                            </span>
                            <span class="desc">
                                @Model.FirstOrDefault().postNote
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @foreach (var item in Model)
                        {
                            temp++;
                            if (temp > 1)
                            {
                                <div class="item">
                                    <div class="desc">
                                        <h3 class="title">
                                            <a href="@item.postUrl">@item.postName</a>
                                        </h3>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
