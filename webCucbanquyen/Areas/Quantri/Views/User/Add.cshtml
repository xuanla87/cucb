
@{
    ViewBag.Title = "Thêm mới thành viên";
    Layout = "~/Areas/Quantri/Views/Shared/_LayoutAdmin.cshtml";
}
@model webCucbanquyen.Models.RegisterViewModel
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1 class="text-uppercase">@ViewBag.Title</h1>
            </div>
            <div class="">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.FullName, new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Nhập họ tên.." })
                                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.UserName, new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Nhập tài khoản.." })
                                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Email, new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Nhập email.." })
                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password, new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu.." })
                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.ConfirmPassword, new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập mật khẩu.." })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.RoleName, new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.RoleName, null, "--Chọn quyền--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-9">

                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scriptsA {
    <script>

    </script>
}






