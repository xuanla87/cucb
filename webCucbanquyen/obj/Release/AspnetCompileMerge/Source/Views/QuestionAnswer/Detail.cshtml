
@{
    ViewBag.Title = "Gửi câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MvcCaptcha exampleCaptcha = new MvcCaptcha("ExampleCaptcha");
}
@using BotDetect.Web.Mvc;
@model CucbanquyenModel.Models.Question
<div class="col-md-8">
    <h1 class="title">@ViewBag.Title</h1>
    <div class="">
        @using (Html.BeginForm("Detail", "QuestionAnswer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.createTime)
            @Html.HiddenFor(x => x.isTrash)
            @Html.HiddenFor(x => x.attachment)
            <div class="form-group row">
                <label class="control-lable col-md-4">Họ tên <span class="text-danger">(*)</span></label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.fullName, new { @class = "form-control", @placeholder = "Nhập Họ và Tên" })
                    @Html.ValidationMessageFor(x => x.fullName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.Label("Địa chỉ", new { @class = "control-lable col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.address, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                    @Html.ValidationMessageFor(x => x.address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="control-lable col-md-4">Thư điện tử <span class="text-danger">(*)</span></label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control", @placeholder = "Nhập email", @type = "email" })
                    @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.Label("Điện thoại", new { @class = "control-lable col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.phone, new { @class = "form-control", @placeholder = "Nhập điện thoại" })
                    @Html.ValidationMessageFor(x => x.phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="control-lable col-md-4">Tiêu đề <span class="text-danger">(*)</span></label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.questionTitle, new { @class = "form-control", @placeholder = "Nhập tiêu đề" })
                    @Html.ValidationMessageFor(x => x.questionTitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.Label("File đính kèm", new { @class = "control-lable col-md-4" })
                <div class="col-md-8">
                    @Html.TextBox("fileInput", "", new { @class = "form-control", @type = "file" })
                </div>
            </div>
            <div class="form-group row">
                @Html.Label("Nội dung câu hỏi", new { @class = "control-lable col-md-4" })
                <div class="col-md-8">
                    @Html.TextAreaFor(x => x.questionBody, new { @class = "form-control", @placeholder = "Nhập..", @rows = "5" })
                    @Html.ValidationMessageFor(x => x.questionBody, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">

                </div>
                <div class="col-md-8">
                    @Html.Captcha(exampleCaptcha)
                    @Html.TextBox("CaptchaCode", "", new { @class = "form-control", @placeholder = "Nhập.." })
                    @Html.ValidationMessage("CaptchaCode", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-send"></i> Gửi</button>
            </div>
        }
    </div>

</div>
