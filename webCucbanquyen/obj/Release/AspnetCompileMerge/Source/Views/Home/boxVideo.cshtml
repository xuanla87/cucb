@model IEnumerable<CucbanquyenModel.Models.Video>
@if (Model != null && Model.Count() > 0)
{
    <div class="box-video">
        <div class="box-content">
            <div class="box-header">
                Video
            </div>
            <div class="box-body">
                <div class="wrapper-video-slider">
                    <div class="video-slider owl-carousel owl-theme">
                        @foreach (var item in Model)
                        {
                            <div class="item">
                                <a href="/Video/Detail/@item.videoId" class="thumbnail">
                                    <img src="@item.thumbnail" alt="" />
                                </a>
                                <h3><a href="/Video/Detail/@item.videoId">@item.videoTitle</a></h3>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
}

