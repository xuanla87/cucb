
@{
    ViewBag.Title = "Quản lý quyền";
    Layout = "~/Areas/Quantri/Views/Shared/_LayoutAdmin.cshtml";
    int count = 0;
}
@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
<div>
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1 class="text-uppercase">@ViewBag.Title</h1>
            </div>
            <div>
                <div class="form-group">
                    <a class="btn btn-primary" title="Thêm mới" href="@Url.Action("AddRole")"><i class="fa fa-plus"></i> Thêm mới</a>
                </div>
                @if (Model != null)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tên quyền</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <button type="button" data-id="@item.Id" class="btn btn-danger delete-role" title="Xóa"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
