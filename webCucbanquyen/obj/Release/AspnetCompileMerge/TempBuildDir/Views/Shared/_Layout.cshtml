<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/liMarquee.css" rel="stylesheet" />
    <link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl"
          rel="stylesheet" type="text/css" />
</head>
<body>
    @Html.Action("viewLaguage", "Home")
    @Html.Action("Banner", "Home")
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Action("menuHasSub", "Home", new { stClass = "nav navbar-nav main-nav" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            @RenderBody()
            <div class="col-md-4">
                @Html.Action("viewSearch", "SearchPage")
                <div class="box-5 thutucdk">
                    <div class="box-content">
                        <div class="box-header">
                            <span class="title text-center text-capitalize">
                                Thủ tục hành chính:
                                <br />
                                Đăng ký Quyền tác giả, Quyền liên quan
                            </span>
                        </div>
                        <div class="box-body">
                            @Html.Action("menuNoSub", "Home", new { stClass = "nav navbar-nav navleft" })
                        </div>
                    </div>
                </div>
                @Html.Action("menuNoSub2", "Home", new { stClass = "nav navbar-nav navleft" })
                @Html.Action("menuNoSub3", "Home", new { stClass = "nav navbar-nav navleft" })
                @Html.Action("searchregisteredWorks", "Home")
                @Html.Action("tinDocNhieu", "Home")
                @Html.Action("HitCounterTotal", "Home")
                <div class="box-5 thutucdk">
                    <div class="box-content">
                        <div class="box-header">
                            <span class="title">
                                Liên kết website
                            </span>
                        </div>
                        <div class="box-body">
                            @Html.Action("LienKetWebsite", "Home", new { stClass = "nav navbar-nav navleft" })
                        </div>
                    </div>
                </div>
                @Html.Action("BoxRight3", "Home")
                @Html.Action("viewQuestionAnswer", "Home")
                @Html.Action("BoxRight4", "Home")
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            @Html.Action("Footer", "Home")
        </div>
        <img src="~/Images/footer_end.jpg" alt="footer" />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.liMarquee.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/JavaScript.js"></script>
    <script>
        $(window).ready(function () {
            $(".wrapper-video-slider").each(function () {
                var $this = $(this),
                    owl = $this.find('.video-slider');
                owl.owlCarousel({
                    loop: true,
                    margin: 10,
                    nav: true,
                    dots: false,
                    navText: ['<i class="fa fa-chevron-left"></i>', '<i class="fa fa-chevron-right"></i>'],
                    responsive: {
                        0: { items: 1 },
                        600: { items: 2, margin: 20 },
                        1000: { items: 4 }
                    }
                })
            });
            $(".myCarousel-video-slider").each(function () {
                var $this = $(this),
                    owl = $this.find('.myCarousel-slider');
                owl.owlCarousel({
                    loop: true,
                    margin: 10,
                    nav: true,
                    dots: false,
                    navText: ['<i class="fa fa-chevron-left"></i>', '<i class="fa fa-chevron-right"></i>'],
                    responsive: {
                        0: { items: 1 },
                        600: { items: 2, margin: 20 },
                        1000: { items: 4 }
                    }
                })
            });
            $(".datepicker").datepicker({
                format: 'mm/dd/yyyy'
            });
        });
        $(window).load(function () {
            //$('.read-most').liMarquee({
            //    direction: 'up',
            //    loop: -1,
            //    scrolldelay: 0,
            //    scrollamount: 50,
            //    circular: true,
            //    drag: true
            //});
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
