
@{
    ViewBag.Title = "Thêm mới loại văn bản";
    Layout = "~/Areas/Quantri/Views/Shared/_LayoutAdmin.cshtml";
}
@model CucbanquyenModel.Models.DocumentType
<div class="">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1 class="text-uppercase">@ViewBag.Title</h1>
            </div>
            <div class="">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(x => x.documentTypeId)
                    @Html.HiddenFor(x => x.isTrash)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.documentTypeName, new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.documentTypeName, new { @class = "form-control geturl", @placeholder = "Nhập loại văn bản.." })
                                @Html.ValidationMessageFor(x => x.documentTypeName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.languageId, new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.languageId, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.languageId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-danger" href="@Url.Action("ListType")" title="Danh sách loại văn bản"><i class="fa fa-list"></i> Danh sách</a>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scriptsA {
}





