@using CucbanquyenModel.Models
@model IEnumerable<Document>
@if (Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table vanban">
            <thead>
                <tr class="header">
                    <th>Số/ Ký hiệu</th>
                    <th>Ngày ban hành</th>
                    <th>Trích yếu nội dung</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-danger">@item.documentName</td>
                        <td class="text-danger">@item.issuedTime.ToString("dd-MM-yyyy")</td>
                        <td>
                            <a href="@item.documentUrl">@item.documentNote</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
